                <option>Select dropdown</option>
                <option>With options</option>
            </select>
        </div>
        <table class="table is-fullwidth is-hoverable">
            <thead>
            <tr>
                <th>Position</th>
                <th>Comp√©titeur</th>
                <th>Score</th>
            </tr>
