{% extends 'base.html.twig' %}

{% block menu %}{% endblock %}
{% block title %} Contact {% endblock %}
{% block body %}
{# Formulaire de contact #}
    <section class="section">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-half">
                    <h1 class="title">Contact</h1>
                    <form method="post" class="formContact">

                        <form method="post" class="formContact">
                            <div class="field">
                                <label class="label" for="sujet">Sujet</label>
                                <div class="control">
                                    <input class="input" type="text" name="sujet" id="sujet" required>
                                </div>
                            </div>

                        <div class="field">
                            <label class="label" for="nom">Nom</label>
                            <div class="control">
                                <input class="input" type="text" name="nom" id="nom" required>
                            </div>
                        </div>



                        <div class="field">
                            <label class="label" for="prenom">Pr√©nom</label>
                            <div class="control">
                                <input class="input" type="text" name="prenom" id="prenom" required>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label" for="email">Email</label>
                            <div class="control">
                                <input class="input" type="email" name="email" id="email" required>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label" for="adresse">Adresse</label>
                            <div class="control">
                                <input class="input" type="text" name="adresse" id="adresse" required>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label" for="message">Message</label>
                            <div class="control">
                                <textarea class="textarea" name="message" id="message" required></textarea>
                            </div>
                        </div>

                        <div class="field">
                            <div class="columns is-centered">
                                <div class="column is-narrow">
                                    <div class="control">
                                        <button class="button is-link" type="submit">Valider</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


    {% block javascripts %}


    {% endblock %}
    

{% endblock %}
